<%- include('../templates/header') %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Lista de Propietarios</h1>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nuevoPropietarioModal">
                <i class="bi bi-plus-circle"></i> Nuevo Propietario
            </button>
        </div>

        <% if (propietarios && propietarios.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Descripción</th>
                            <th>Cédula</th>
                            <th>Teléfono</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% propietarios.forEach(function(propietario) { %>
                            <tr>
                                <td><%= propietario.idPropietario %></td>
                                <td><%= propietario.descripcion %></td>
                                <td><%= propietario.cedula %></td>
                                <td><%= propietario.telefono %></td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="editarPropietario('<%= propietario.idPropietario %>')">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="eliminarPropietario('<%= propietario.idPropietario %>')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No hay propietarios registrados.
            </div>
        <% } %>
    </div>
</div>

<!-- Modal Nuevo Propietario -->
<div class="modal fade" id="nuevoPropietarioModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Propietario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formNuevoPropietario">
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="descripcion" required>
                    </div>
                    <div class="mb-3">
                        <label for="cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="cedula" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" id="telefono" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="guardarPropietario()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<script>
function eliminarPropietario(id) {
    if (confirm('¿Estás seguro de que deseas eliminar este propietario?')) {
        fetch(`/api/propietario/${id}/eliminar`, {
            method: 'DELETE',
        })
        .then(response => response.json())
        .then(data => {
            alert(data.message);
            location.reload();
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error al eliminar el propietario');
        });
    }
}

function guardarPropietario() {
    const descripcion = document.getElementById('descripcion').value;
    const cedula = document.getElementById('cedula').value;
    const telefono = document.getElementById('telefono').value;

    fetch('/api/propietario/crear', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            descripcion,
            cedula,
            telefono
        }),
    })
    .then(response => response.json())
    .then(data => {
        alert('Propietario creado exitosamente');
        location.reload();
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error al crear el propietario');
    });
}

function editarPropietario(id) {
